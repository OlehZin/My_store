<div class="p-3 mb-2 bg-danger text-white">This is admin page for orders!</div>
  <thead>
    <% if @orders.empty? %>
    <h3>No orders in the store!</h3>
    <% else %>
    <table class="table table-striped">
      <tr>
        <th scope="col">ID:</th>
        <th scope="col">Date:</th>
        <th scope="col">Name:</th>
        <th scope="col">Total price:</th>
        <th scope="col">Show:</th>
      </tr>
  </thead>
<% end %>

<% @orders.each do |order| %>
  <tbody>
    <tr> 
      
      <td><%= order.id %></td>
      <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
      <td><%= order.user.email %></td>
      <td><%= order.total_price %> $</td>
      <td><%= link_to "Order", account_order_path(order), class: "btn btn-success"%></td>
    </tr>
    </tbody>
<% end %>

